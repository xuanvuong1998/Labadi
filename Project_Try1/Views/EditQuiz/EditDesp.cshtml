@model Project_Try1.Models.Quiz

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>CreateNewQuiz</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/home.css" rel="stylesheet" type="text/css">
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">                
                @Html.ActionLink("Cancel", "CancelEditDes", "EditQuiz",
                 new { area = "" }, new { @class = "navbar-brand" })                 

                @Html.ActionLink("Save", "SaveQuiz", "EditQuiz",
               new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav"></ul>
            </div>
        </div>
    </div>
    <h2>EDIT QUIZ DESCRIPTION</h2>
    <form action="~/EditQuiz/SaveDes" method="post">
        <input type="hidden" name="ID" value="@Model.ID" />
        Title: <input name="TxtTitle" value="@Model.Title" /><br />
            
        Image:
        <input type="file" id="files" name="TxtImage" accept="image/*" value="@Model.Image"/><br />        
        <input type="submit" value="SAVE!" />
    </form>
</body>
</html>

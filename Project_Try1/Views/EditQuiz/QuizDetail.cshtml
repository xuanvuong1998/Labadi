@model Project_Try1.Models.Quiz

<link href="~/Content/quizDetails.css" rel="stylesheet" type="text/css">

@{
    ViewBag.Title = "View";
}

<div class="container">
    <div class="row">
        <div class="col-md-12 overview-quiz ">

            <div class="col-md-6">
                <img src="~/resources/images/QuizImages/@Model.Image" />
            </div>
            <div id="info" class="col-md-6">
                <span>Title: @Model.Title</span><br />
                
                <span>Creator: @Model.Creator</span><br />
                
                @using (Html.BeginForm("EditQuiz", "EditQuiz"))
                {
                    <input type="hidden" name="ID" value="@Model.ID" />
                    <input type="submit" value="EDIT" />
                }
            </div>
            
        </div>


    </div>
</div>


<div id="right">
    <h3>Questions</h3>
    <div id="questions">
        @if (Model.QuestionList == null) {
            <h3>There is not any question yet</h3>
        } else {
            foreach (var item in Model.QuestionList) {
                <div class="aQue">
                    <div class="content">
                        <h3>@item.Content</h3>
                        A. <span>@item.AnsA</span><br />
                        B. <span>@item.AnsB</span><br />
                        C. <span>@item.AnsC</span><br />
                        D. <span>@item.AnsD</span><br />
                        Answer: <span>@item.Answer</span>
                    </div>
                    <div class="queImg">
                        <img src="~/resources/images/QuestionImages/@item.Image" />
                    </div>
                </div>
            }
        }


    </div>
</div>




@model List<Project_Try1.Models.Quiz>

@foreach (var item in Model) {
    <div class="quiz-home col-xs-6 col-sm-3 col-md-3 col-lg-3">

        <div class="thumbnail">
            <div class="caption text-center">

                <img src="~/resources/images/QuizImages/@item.Image" class="img" />
                <h3 class="quiz-title">@item.Title</h3>

                <p>
                    <span>Creator: <font color="gray">@item.Creator</font></span><br />
                    <span>Plays: <font color="red">@item.Plays</font></span><br />
                    <a href="#" class="btn btn-danger">Play now</a>
                </p>

            </div>

        </div>
    </div>
}
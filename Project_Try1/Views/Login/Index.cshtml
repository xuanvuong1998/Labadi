@using System.Web.Mvc.Html
@inherits System.Web.Mvc.WebViewPage

@{ 
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <title>Labadi.ml</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!--===============================================================================================-->

    <link rel="icon" type="image/png" href="@Url.Content("~/resources/images/icons/favicon.ico")" />
    <!--===============================================================================================-->
    <!--===============================================================================================-->

    <link rel="stylesheet" type="text/css" href="@Url.Content("~/resources/fonts/font-awesome-4.7.0/css/font-awesome.min.css")">
    <link rel="stylesheet" type="text/css" href="@Url.Content("~/resources/vendor/bootstrap/css/bootstrap.min.css")">
    <!--===============================================================================================-->

    <link rel="stylesheet" type="text/css" href="@Url.Content("~/resources/vendor/animate/animate.css")">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="@Url.Content("~/resources/vendor/css-hamburgers/hamburgers.min.css")">
    <link rel="stylesheet" type="text/css" href="@Url.Content("~/resources/vendor/select2/select2.min.css")">

    <!--===============================================================================================-->
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="@Url.Content("~/Content/util.css")">
    <link rel="stylesheet" type="text/css" href="@Url.Content("~/Content/main.css")">
    <!--===============================================================================================-->
</head>
<body>

    <div class="limiter">
        <div class="container-login100">
            <div class="wrap-login100">
                <div class="login100-pic js-tilt" data-tilt>
                    <img src="@Url.Content("~/resources/images/img-01.png")" alt="IMG">
                </div>

                <form id="frmLogin" action="~/Login/CheckLogin" class="login100-form validate-form" method="post">
                    <span class="login100-form-title">
                        Member Login
                    </span>

                    <div class="wrap-input100 validate-input">
                        <input id="username" class="input100" type="text" name="username" placeholder="Email">
                        <span class="focus-input100"></span>
                        <span class="symbol-input100">
                            <i class="fa fa-envelope" aria-hidden="true"></i>
                        </span>
                        <font id="err-username"></font>
                    </div>

                    <div class="wrap-input100 validate-input">
                        <input id="password" class="input100" type="password" name="password" placeholder="Password" onchange="checkRequired('password', 'err-password', 'Password')">
                        <span class="focus-input100"></span>
                        <span class="symbol-input100">
                            <i class="fa fa-lock" aria-hidden="true"></i>
                        </span>
                     
                    </div>

                    <div class="container-login100-form-btn">
                        <font class="text-danger">@ViewBag.Message</font>
                        <button id="login" onclick="checkRequired('username', 'err-username', 'Username')" class="login100-form-btn">
                            Login
                        </button>
                    </div>

                    <div class="text-center p-t-12">
                        <span class="txt1">
                            Forgot
                        </span>
                        <a class="txt2" href="#">
                            Username / Password?
                        </a>
                    </div>

                    <div class="text-center p-t-136">
                        <!--
                        <a class="txt2" href="#">


                            <i class="fa fa-long-arrow-right m-l-5" aria-hidden="true"></i>
                        </a>
                        -->
                        @Html.ActionLink("Create your account ", "Register", "Register")
                    </div>
                </form>
            </div>
        </div>
    </div>





    <!--===============================================================================================-->
    <script src="~/resources/vendor/jquery/jquery-3.2.1.min.js"></script>
    <!--===============================================================================================-->
    <script src="~/resources/vendor/bootstrap/js/popper.js"></script>
    <script src="~/resources/vendor/bootstrap/js/bootstrap.min.js"></script>
    <!--===============================================================================================-->
    <script src="~/resources/vendor/select2/select2.min.js"></script>
    <!--===============================================================================================-->
    <script src="~/resources/vendor/tilt/tilt.jquery.min.js"></script>
    <script>
    $('.js-tilt').tilt({
        scale: 1.1
    })


    </script>
    <script>
    function checkRequired(idTag,idErrTag,errString) {
        var result = true;

        if ($('#'+idTag).val() == "") {
            $('#' +idErrTag).html(errString +'  is required !');
            $('#' +idErrTag).css('color', 'red');
            result = false;
        } else {
            $('#' +idErrTag).html('');
        }

        if (result == true) {
            $('#frmLogin').submit();            
        }


    }
    </script>
    <!--===============================================================================================-->
    <script src="js/main.js"></script>

</body>
</html>
